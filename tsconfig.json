{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "allowJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true
  },
  "exclude": ["**/*.spec.ts", "tests/"]
}
